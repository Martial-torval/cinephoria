generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  firstname String?
  lastname  String?

  role       Role
  banned     Boolean?
  banReason  String?
  banExpires DateTime?

  createdAt     DateTime @default(now())
  name          String
  emailVerified Boolean  @default(false)
  image         String?
  updatedAt     DateTime @default(now()) @updatedAt
  username      String   @unique

  bookings Booking[]
  contacts Contact[]
  reviews  Review[]
  accounts Account[]
  sessions Session[]

  @@map("user")
}

model Movie {
  id          Int             @id @default(autoincrement())
  title       String
  createdAt   DateTime        @default(now())
  description String
  isFavorite  Boolean         @default(false)
  minimumAge  MinimumAge
  posterUrl   String
  rate        Float?          @default(0)
  genre       Genre[]
  cinemas     CinemaOnMovie[]
  reviews     Review[]
  seances     Seance[]
  Cinema      Cinema[]        @relation("CinemaToMovie")
}

model Cinema {
  id       Int             @id @default(autoincrement())
  name     String
  address  String
  city     String
  country  String
  image    String?
  seanceId Int
  movies   CinemaOnMovie[]
  rooms    Room[]
  seances  Seance[]
  Movie    Movie[]         @relation("CinemaToMovie")
}

model Room {
  id                Int               @id @default(autoincrement())
  numero            Int
  capacite          Int
  cinemaId          Int
  qualityProjection QualityProjection
  incidents         Incident[]
  cinema            Cinema            @relation(fields: [cinemaId], references: [id])
  seances           Seance[]

  @@unique([numero, cinemaId])
}

model Seance {
  id                Int               @id @default(autoincrement())
  movieId           Int
  roomId            Int
  cinemaId          Int
  startTime         DateTime
  endTime           DateTime
  qualityProjection QualityProjection
  bookings          Booking[]

  cinema Cinema @relation(fields: [cinemaId], references: [id])
  movie  Movie  @relation(fields: [movieId], references: [id])
  room   Room   @relation(fields: [roomId], references: [id])
}

model Booking {
  id            Int           @id @default(autoincrement())
  userId        String
  seanceId      Int
  numberOfSeats Int
  totalPrice    Decimal
  statut        BookingStatus
  bookingSeats  Int[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  seance        Seance        @relation(fields: [seanceId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
}

model Review {
  id        Int          @id @default(autoincrement())
  userId    String
  movieId   Int
  rating    Int
  comment   String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt
  statut    ReviewStatus
  movie     Movie        @relation(fields: [movieId], references: [id])
  user      User         @relation(fields: [userId], references: [id])
}

model Incident {
  id              Int            @id @default(autoincrement())
  roomId          Int
  description     String
  statut          IncidentStatus
  dateSignalement DateTime       @default(now())
  room            Room           @relation(fields: [roomId], references: [id])
}

model Contact {
  id          Int      @id @default(autoincrement())
  userId      String
  title       String
  message     String
  dateMessage DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model CinemaOnMovie {
  id       Int    @id @default(autoincrement())
  cinemaId Int
  movieId  Int
  cinema   Cinema @relation(fields: [cinemaId], references: [id])
  movie    Movie  @relation(fields: [movieId], references: [id])
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

enum QualityProjection {
  FOUR_DX
  THREE_D
  FOUR_K
  IMAX
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}

enum BookingStatus {
  CONFIRMED
  USED
  CANCELLED
}

enum ReviewStatus {
  en_attente
  valid
  refus
}

enum IncidentStatus {
  en_attente
  r
  solu
}

enum Genre {
  Action
  Adventure
  Animation
  Comedy
  Crime
  Documentaire
  Drame
  Famille
  Fantasie
  Historique
  Horreur
  Musique
  Myst√®re
  Romance
  ScienceFiction
  Thriller
  Guerre
  Western
}

enum MinimumAge {
  AGE_0
  AGE_10
  AGE_12
  AGE_16
  AGE_18
}
